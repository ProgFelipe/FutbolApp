<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.futbolapp.Registro"
    android:background="@drawable/background_rounder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="REGISTRATE Y DISFRUTA"
        android:id="@+id/txtHeaderLogin"
        android:editable="false"
        android:textColor="#ffff8d24"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:shadowColor="#ff46632b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usuaRegistro"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:hint="@string/registroUsuario"
        android:textColorHint="#ff000000"
        android:layout_alignRight="@+id/passRegistro"
        android:layout_alignEnd="@+id/passRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passRegistro"
        android:hint="@string/contraseñaUsuario"
        android:textColorHint="#FF000000"
        android:layout_below="@+id/usuaRegistro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:background="@drawable/btn_default"
        android:id="@+id/btnRegistro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RepassRegistro"
        android:hint="@string/ResetcontraseñaUsuario"
        android:textColorHint="#FF000000"
        android:layout_below="@+id/passRegistro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
